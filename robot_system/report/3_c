import sys

negative = 0.0
positive = 0.0
zero = 0.0
nums = [ float(e) for e in sys.argv[1:] ]
for x in nums:
    if x < 0.0:
        negative += 1.0
    elif x > 0.0:
        positive += 1.0
    else:
        zero += 1.0
print("非負:{} ゼロ:{} 負:{}".format(positive, zero, negative))

